{
    "name": "cmpct",
    "version": "1.0.0",
    "main": "build/index.js",
    "repository": "git@github.com:link00000000/cmpct.git",
    "author": "link00000000 <crandall.logan@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@types/app-root-path": "^1.2.4",
        "@types/async-redis": "^1.1.1",
        "@types/express": "^4.17.11",
        "@types/express-http-proxy": "^1.6.1",
        "cross-env": "^7.0.3",
        "nodemon": "^2.0.7",
        "npm-run-all": "^4.1.5",
        "open-cli": "^6.0.1",
        "prettier": "2.2.1",
        "ts-node": "^9.1.1"
    },
    "dependencies": {
        "app-root-path": "^3.0.0",
        "async-redis": "^1.1.7",
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "express-http-proxy": "^1.6.2",
        "http-status-codes": "^2.1.4",
        "nanoid": "^3.1.20",
        "typescript": "^4.1.3",
        "winston": "^3.3.3"
    },
    "scripts": {
        "build": "run-p --print-label --print-name build:*",
        "build:server": "tsc",
        "build:client": "yarn --cwd client build",
        "dev": "run-s --silent dev:open-browser dev:start",
        "dev:start": "run-p --print-label --print-name --race dev:server dev:client",
        "dev:open-browser": "open-cli https://localhost:8080",
        "dev:server": "nodemon --watch index.ts --watch src --ext ts --exec cross-env NODE_ENV=development ts-node index.ts",
        "dev:client": "cross-env BROWSER=none NODE_ENV=development yarn --cwd client start",
        "lint": "prettier --write --ignore-unknown .",
        "ssl-gencerts": "mkdir -p certs && openssl req -x509 -newkey rsa:4096 -keyout certs/selfsigned.pem -out certs/selfsigned.cert -days 365 -nodes",
        "redis:start": "docker-compose up -d redis",
        "redis:attach": "docker-compose exec redis redis-cli"
    }
}